<DetailsPlaylist>:
    orientation: 'vertical'
    spacing: 10
    padding: (10, 10, 10, 10)
    Element:
        Label:
            text: "Playlist name:"
        Label:
            id: playlist_name
            text: "???"
    Element:
        size_hint: (1, 1)
        id: song_list_container
        Label:
            text: "Songs:"
        BoxLayout:
            orientation: "vertical"
            id: song_list
    Element:
        spacing: 10
        Button:
            id: export_button
            disabled: True
            text: "Export playlist"
            on_release: root.export_playlist()
        Button:
            id: dl_button
            disabled: True
            text: "Download playlist"
            on_release: root.download_playlist()
