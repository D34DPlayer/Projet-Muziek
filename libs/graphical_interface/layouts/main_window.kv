<Root>:
    cols: 2
    StackLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'lr-tb'
        size_hint_x: None
        width: 150
        padding: 5

        Button:
            size_hint_y: None
            height: 30
            text: 'Groups'
            on_release: root.display_groups()

        Button:
            size_hint_y: None
            height: 30
            text: 'Songs'
            on_release: root.display_songs()

        Button:
            size_hint_y: None
            height: 30
            text: 'Albums'
            on_release: root.display_albums()

        Button:
            size_hint_y: None
            height: 30
            text: 'Playlists'
            on_release: root.display_playlists()

    BoxLayout:
        id: content

    FloatLayout:
        size_hint: (0, 0)
        Button:
            id: create
            pos: (root.width - (self.width + 10), 10)
            size_hint: (None, None)
            width: 30
            height: 30
            text: '+'

<PageLayout>:
    orientation: 'vertical'
    BoxLayout:
        id: header
        height: 30
        size_hint_y: None

    StackLayout:
        id: body

    AnchorLayout:
        id: footer
        height: 30
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint_y: None
        BoxLayout:
            Label:
                text: ''
            Button:
                width: 50
                size_hint_x: None
                text: 'prev'
                on_release: root.page -= 1
            Label:
                id: page_index
            Button:
                width: 50
                size_hint_x: None
                text: 'next'
                on_release: root.page += 1
            Label:
                text: ''
