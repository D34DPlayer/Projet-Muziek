<FormElement@BoxLayout>:
    canvas:
        Color:
            rgb: 0x26 / 255.0, 0x32 / 255.0, 0x38 / 255.0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    padding: (5, 5, 5, 5)

<PopupAlbum>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: (10, 10, 10, 10)
        FormElement:
            Label:
                text: 'Album name:'
            TextInput:
                id: name_input
                focus: True
                multiline: False
        FormElement:
            id: group_container
            Label:
                text: 'Group name:'

        FormElement:
            id: song_list_container
            Label:
                text: 'Songs:'
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                counter: 0
                id: song_list
                Button:
                    text: "+"
                    on_release: root.add_song_field()
        FormElement:
            spacing: 10
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Submit"
                on_release: root.submit_form()
