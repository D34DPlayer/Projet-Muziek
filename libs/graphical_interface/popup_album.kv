<FormElement@BoxLayout>:
    orientation: 'horizontal'
    padding: [20, 10, 20, 10]

<PopupAlbum>:
    BoxLayout:
        orientation: 'vertical'
        FormElement:
            Label:
                text: 'Album name:'
            TextInput:
                id: name_input
                focus: True
                multiline: False
        FormElement:
            id: group_container
            Label:
                text: 'Group name:'

        FormElement:
            id: song_list_container
            Label:
                text: 'Songs:'
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                counter: 0
                id: song_list
                Button:
                    text: "+"
                    on_release: root.add_song_field()
        FormElement:
            spacing: 10
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Submit"
                on_release: root.submit_form()
