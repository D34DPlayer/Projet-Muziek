<ErrorPopup>:
    BoxLayout:
        orientation: 'vertical'
        padding: (10, 10, 10, 10)
        spacing: 10
        Label:
            size_hint: (1, 3)
            id: text_label
        Button:
            text: "Ok, I understand"
            on_release: root.dismiss()

<InfoPopup>:
    BoxLayout:
        orientation: 'vertical'
        padding: (10, 10, 10, 10)
        spacing: 10
        Label:
            size_hint: (1, 3)
            id: text_label
        Button:
            text: "Ok"
            on_release: root.dismiss()

<FormElement@BoxLayout>:
    canvas:
        Color:
            rgb: 0x26 / 255.0, 0x32 / 255.0, 0x38 / 255.0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    padding: (5, 5, 5, 5)

<Element@BoxLayout>:
    canvas:
        Color:
            rgb: 0x13 / 255.0, 0x16 / 255.0, 0x19 / 255.0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    padding: (5, 5, 5, 5)