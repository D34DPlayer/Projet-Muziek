<FormElement@BoxLayout>:
    canvas:
        Color:
            rgb: 0x26 / 255.0, 0x32 / 255.0, 0x38 / 255.0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    padding: (5, 5, 5, 5)

<PopupPlaylist>:
    title: "Create a playlist:"
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: (10, 10, 10, 10)
        FormElement:
            Label:
                text: 'Playlist name:'
            TextInput:
                id: name_input
                focus: True
                multiline: False
        FormElement:
            spacing: 10
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Submit"
                on_release: root.submit_form()

<PopupAddToPlaylist>:
    title: "Add the song to a playlist:"
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: (10, 10, 10, 10)
        FormElement:
            id: playlist_container
            Label:
                text: 'Playlist name:'
        FormElement:
            spacing: 10
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Submit"
                on_release: root.submit_form()