<Element@BoxLayout>:
    canvas:
        Color:
            rgb: 0x13 / 255.0, 0x16 / 255.0, 0x19 / 255.0
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    padding: (5, 5, 5, 5)

<DetailsGroup>:
    orientation: 'vertical'
    spacing: 10
    padding: (10, 10, 10, 10)
    Element:
        Label:
            text: "Group name:"
        Label:
            id: group_name
            text: "???"
    Element:
        Label:
            text: "Members:"
        Label:
            id: members
            text: "???"
    Element:
        Label:
            text: "Songs:"
        Label:
            id: songs
            text: "???"
    Element:
        Label:
            text: "Albums:"
        Label:
            id: albums
            text: "???"
    Element:
        spacing: 10
        Button:
            id: edit_button
            disabled: True
            text: "Edit group"
            on_release: root.edit_group()
        Button:
            id: add_song_button
            disabled: True
            text: "Add a song"
            on_release: root.add_song()
        Button:
            id: add_album_button
            disabled: True
            text: "Add an album"
            on_release: root.add_album()
